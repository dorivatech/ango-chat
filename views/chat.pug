extends layouts/default.pug

block content
    .d-flex.justify-content-center.align-items-center.flex-column.h-100
        //- h1.text-center AngoChat

        .chat.row.justify-content-center.fixed-height
            .col-lg-5.col-md-7.col-sm-8.col-10
                .card.h-100
                    .card-body#messages-container
                        #messages
                            - var n = 0

                            while n < 10
                                if(n % 2 == 0)
                                    li
                                        span= 'Eu sou secundÃ¡rio ' + n++
                                else
                                    li.me
                                        span= 'Eu sou o principal ' + n++

                        .typing-container.text-center#typing-container

                    .card-footer
                        form#form
                            .d-flex.justify-content-between.align-items-start
                                .form-group.message-box
                                    textarea(name="message" placeholder="Digite a sua mensagem..." rows="1").form-control.rounded#message

                                .form-group.btn-send-box
                                    button.btn-send
                                        i.fa.fa-paper-plane
